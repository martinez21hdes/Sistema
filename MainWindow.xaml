            <!--Diseño de Ventana de Materia-->
            <TabItem  Width="120" Header="Materia" Height="80" FontSize="15" Background="{x:Null}" BorderBrush="{x:Null}"  Margin="0,-1,0,1" Foreground="White" FontWeight="Bold">
